<head>
	<script>
	<link rel="stylesheet" type="text/css" href="style.css">
	</script>
	<title>Account Info</title>
</head>

<% @names.each do |name| %>

<h1> <%= name.capitalize %> </h1>
<p>Total Balance: $ <%= @data[name].getBalance.to_s %></p>
<tr>
	<table>
	<tr>
		<td>Category</td>
		<td>Total Spent</td>
		<td>Average Transaction</td>
	</tr>

	<% @data[name].getCategoryData.each do |key, value| %>
	<tr>
		<td><%= key %></td>
		<td><%= value.getTotal.to_s %></td>
		<td><%= value.getAverage.to_s %></td>
	</tr>
	<% end %>
	</table>

<% end %>

<a href="/index">Go back</a>