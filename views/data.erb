<p class="page_title">View Accounts</p>

<p class="center"><strong>Select an account to view below:</strong></p>

<div class="center">
	<select onChange="window.location.href=this.value">
		<option value="/data"></option>
		<% names = @data.keys
		 names.each do |i| %>
			<option value="/data?name=<%= i %>"><%= i %></option>
		<% end %>
	</select>
</div>

<% if @name == nil %>
	<p></p>
<% else %>
	<div class="center">
	<h1> <%= @name.capitalize %> </h1>
	<p>Total Balance: $<%= @data[@name].getBalance.to_s %></p>
	</div>

	<table class="centertable">
		<tr>
			<td>Category</td>
			<td>Total Spent</td>
			<td>Average Transaction</td>
		</tr>

		<% @data[@name].getCategoryData.each do |key, value| %>
		<tr>
			<td><%= key %></td>
			<td>$<%= value.getTotal.to_s %></td>
			<td>$<%= value.getAverage.to_s %></td>
		</tr>
		<% end %>
	</table>
<% end %>